extends layout

block content
  //- Navigation
  nav(class="navbar navbar-default navbar-fixed-top topnav", role="navigation")
    .container.topnav
      .navbar-header
        a(class="navbar-brand topnav", href="/") Sea Battle
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav.navbar-right
          li: a(href="#about") About
          li: a(href="#create-game") Create Game
          li: a(href="#start-game") Start Game
  a(name="about")
  .intro-header
    .container
      .row
        .col-lg-12
          .intro-message
            h1 Sea Battle
            h3 Начать игру прямой сейчас?
            hr.intro-divider
            ul.list-inline.intro-social-buttons
              li: a(href="#start-game", class="btn btn-default")
                i.fa.fa-twitter.fa-fw
                span.network-name Start Game
  a(name="create-game")
  .content-section-a
    .container
      .row
        .col-lg-5.col-sm-6
          h2 Создать свою игру
          hr.section-heading-spacer
          .clearfix
          p.lead Вы можете создать совю комнату для игры с другом, а так же вы сможете переписыватся с ним с помощью чата. Для этого вам нужно заполнить форму создания комнаты.
        .col-lg-5.col-lg-offset-2.col-sm-6
          form(name="create-room", id="create-room")
            .row.control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Имя игрока
                input(type="text", class="form-control", placeholder="Имя игрока")
                p.help-block.error-block
            .row.control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Название комнаты
                input(type="text", class="form-control", placeholder="Название комнаты")
                p.help-block.error-block
            .row.control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Пароль
                input(type="text", class="form-control", placeholder="Пароль")
                p.help-block.error-block
            .row.control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Подтверждение пароля
                input(type="text", class="form-control", placeholder="Подтверждение пароля")
                p.help-block.error-block
            br
            #success
            .row
              .form-group.col-xs-12
                button(type="submit", class="btn btn-default btn-lg") Создать
  a(name="start-game")
  .content-section-b(ng-controller="roomsList")
    .container
      .row
        .col-lg-5.col-lg-offset-1.col-sm-push-6.col-sm-6
          h2 Выбрать противника
          hr.section-heading-spacer
          .clearfix
          p.lead Вы можете выбрать комнату из списка и присоединиться к игре введя пароль.
        .col-lg-5.col-sm-pull-6.col-sm-6
          form(name="create-room", id="create-room")
            .row.control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Нзвание игры
                input(type="text", class="form-control", placeholder="Название игры")
                p.help-block.error-block
          br
          ul.list-group.list-rooms.overflow-y-scroll
            li.list-group-item Name room #1
              span.badge 1
            li.list-group-item Name room #2
              span.badge 2
            li.list-group-item Name room #3
              span.badge 3
            li.list-group-item Name room #4
              span.badge 4
            li.list-group-item Name room #5
              span.badge 5
            li.list-group-item Name room #1
              span.badge 1
            li.list-group-item Name room #2
              span.badge 2
            li.list-group-item Name room #3
              span.badge 3
            li.list-group-item Name room #4
              span.badge 4
            li.list-group-item Name room #5
              span.badge 5
            li.list-group-item Name room #1
              span.badge 1
            li.list-group-item Name room #2
              span.badge 2
            li.list-group-item Name room #3
              span.badge 3
            li.list-group-item Name room #4
              span.badge 4
            li.list-group-item Name room #5
              span.badge 5
  footer
    .container
      .row
        .col-lg-12
          ul.list-inline
            li: a(href="#about") Acout
            li.footer-menu-divider &sdot;
            li: a(href="#create-game") Create Game
            li.footer-menu-divider &sdot;
            li: a(href="#start-game") Start Game